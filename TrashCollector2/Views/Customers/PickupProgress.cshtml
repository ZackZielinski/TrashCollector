@model IEnumerable<TrashCollector2.Models.Pickup>
@using TrashCollector2.CustomHelpers

@{
    ViewBag.Title = "Pickup Order Status";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PickupDate.DayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickupStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacationStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PickupDate.DayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.PickupStatus(item.PickupStatus)
        </td>
        <td>
            @Html.VacationStatus(item.VacationStatus)
        </td>
        <td>
            @Html.DateFormat(item.VacationStart)
        </td>
        <td>
            @Html.DateFormat(item.VacationEnd)
        </td>
        <td>
            @Html.ActionLink("Edit Pickup Order", "EditPickup", "Customers", new { id = item.Id }, null) |
            @Html.ActionLink("Change Vacation Dates", "ChangeVacationDates", "Customers", new { id = item.Id }, null) |
            @Html.ActionLink("Delete", "DropPickup", "Customers", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
