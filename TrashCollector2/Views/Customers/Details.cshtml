@model IEnumerable<TrashCollector2.Models.Pickup>
@using TrashCollector2.CustomHelpers

@{
    ViewBag.Title = "Details";
}

@foreach (var item in Model) {
<h2>@item.Customer.FirstName @item.Customer.LastName</h2>
    break;
}

<h3>@Html.DisplayNameFor(model => model.Customer.TotalPayment)
    $@foreach (var item in Model)
    {
        @Html.DisplayPayment(item.Customer.TotalPayment)
        break;
    }
</h3>

<hr />
@Html.ActionLink("View Assigned Pickups", "PickupProgress")

<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PickupDate.DayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacationStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickupDate.WeeklyPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonthlyPayment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PickupDate.DayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.VacationStatus(item.VacationStatus)
            </td>
            @if (item.VacationStatus == true)
            {
            <td>
            </td>
            <td>
            </td>
            }
            else
            {
            <td>
                $@Html.DisplayPayment(item.PickupDate.WeeklyPayment)
            </td>
            <td>
                $@Html.DisplayPayment(item.MonthlyPayment)
            </td>
            }
        </tr>
    }

</table>
