@model TrashCollector2.Models.Pickup
@using TrashCollector2.CustomHelpers

@{
    ViewBag.Title = "Pickup Order";
}

<h2>@Model.Customer.FirstName @Model.Customer.LastName</h2>

<div>
    <h4>Pickup Details</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.PickupDate.DayName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PickupDate.DayName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VacationStatus)
        </dt>

        <dd>
            @Html.VacationStatus(Model.VacationStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PickupStatus)
        </dt>

        <dd>
            @Html.PickupStatus(Model.PickupStatus)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("View Map", "MapView", new { id = Model.Id }) |
    @Html.ActionLink("Change Pickup Status", "UpdatePickupStatus", new { id = Model.Id }) |
    @Html.ActionLink("Back to Pickup List", "AvailablePickups")
</p>
